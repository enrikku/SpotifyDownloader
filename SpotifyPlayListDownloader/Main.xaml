<Window x:Class="SpotifyPlayListDownloader.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Spotify Downloader" Height="480" Width="860"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <!-- Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="18"
                Background="{StaticResource CardBrush}"
                Style="{StaticResource Card}"
                BorderBrush="#22FFFFFF" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="Spotify Downloader" Style="{StaticResource TitleText}" />
                <Border Background="{StaticResource AccentBrush}" Height="4" VerticalAlignment="Bottom" CornerRadius="2" Opacity="0.9" />
            </Grid>
        </Border>

        <!-- Center Card -->
        <Grid Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Margin="24"
                        Background="{StaticResource CardBrush}"
                        Style="{StaticResource Card}"
                        CornerRadius="14"
                        Padding="24">

                    <StackPanel>
                        <TextBlock Text="Bienvenido! Elija una de las siguientes opciones:"
                                   Style="{DynamicResource SubtitleText}" Margin="0,0,0,16" />

                        <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                            <Button Style="{StaticResource PrimaryButton}" Margin="6" x:Name="btnDownloadPlayList" Click="btnDownloadPlayList_Click"
                                    ToolTip="Desacargar todas las canciones de una playlist">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" />
                                    <TextBlock Text="Descargar Playlist" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PrimaryButton}" Margin="6" x:Name="btnDownloadArtist" Click="btnDownloadArtist_Click"
                                    ToolTip="Descargar albums, EP; apariciones por artista">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" />
                                    <TextBlock Text="Descargar Artista" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>